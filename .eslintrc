{
    "extends": "google",
    "plugins": ["node"],
    "env": {
        "es6": true,
        "node": true
    },
    "rules": {
        "node/no-deprecated-api": 2,
        "node/no-missing-import": 2,
        "node/no-missing-require": 2,
        "node/no-unpublished-import": 2,
        "node/no-unsupported-features": [
            2, {
            "version": 6
            }
        ],
        "camelcase": 2,
        "comma-dangle": 0,
        "indent": [2, 4],
        "max-len": [2, 128],
        "no-console": 2,
        "no-negated-condition": 2,
        "no-undef": 0,
        "no-underscore-dangle": 0,
        "no-var": 0,
        "quotes": [2, "single"],
        "spaced-comment": 2
    }
}
